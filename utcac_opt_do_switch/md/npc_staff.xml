<?xml version="1.0" encoding="UTF-8" ?>
<diff>
  <add sel="//cue[@name='DefaultComm']/actions/do_else">
            <do_if value="$actor.iscontrolentity and $actor.type == entitytype.defencecontrol and $actor.owner == faction.player">
              <add_player_choice text="{5554103,9}" section="cStaff_UT_CAC_Defense" position="4"/>
            </do_if>
  </add>
  <add sel="//cue[@name='SectionHandler']/actions/do_else" pos="before">
            <do_elseif value="event.param == 'cStaff_UT_CAC_Defense'">
              <signal_cue_instantly cue="md.UT_CAC_Defense.Main" param="$actor"/>
              <cancel_cue cue="OnPlatformPopulation_Staff"/>
            </do_elseif>
  </add>
  <add sel="//cue[@name='OnPlatformPopulation_Staff']/cues[not(cue/@name='NPC_Cancel_Dialogue_Tree')]" optional="true"><!-- Only add this if not already present (cue may also be provided by other Extensions)-->
        <cue name="NPC_Cancel_Dialogue_Tree">
          <conditions>
            <event_object_signalled object="$actor" param="'cancel Vanilla dialogue tree'"/>
          </conditions>
          <actions>
            <cancel_cue cue="OnPlatformPopulation_Staff"/>
          </actions>
        </cue>
  </add>
</diff>