<?xml version="1.0" encoding="UTF-8" ?>
<aiscript name="ut.cac.move.dock" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://utnas/~unitrader/XRebirthxsds/aiscripts.xsd">
  <!--

 rewritten from scratch by UniTrader
  
Script to Dock or Park an Object

  -->
  <params>
    <param name="params" default="false" comment="pass a single Table filled with the wanted param Values here to make calls via list possible (always has priority)"/>
    <param name="destination" default="null" comment="Object to Dock at, specifying a Dock here is planned"/>
    <param name="tradeoffer" default="null" comment="Tredeoffer for which a fitting Dock should be preffered (only applies to bigships)"/>
    <param name="direct_parking" default="false" comment="NYI - direct Parking without moving to approach pos first"/>
  </params>
  <init>
    <!-- this will require some Signal Handlers once the Personal Moving/Removing is implemented, therefore in init section -->
    <do_if value="$destination.tradenpc.exists">
      <set_value name="$docking_coordinator" exact="$destination.tradenpc"/>
    </do_if>
    <do_elseif value="$destination.buildanchor.tradenpc.exists" comment="for CVs the Manager of the Station coordinates the Docking">
      <set_value name="$docking_coordinator" exact="$destination.buildanchor.tradenpc"/>
    </do_elseif>
    <do_else>
      <set_value name="$docking_coordinator" exact="null"/>
    </do_else>
  </init>
  <attention min="unknown">
    <actions>
      <!-- first decode the $params to the Variables -->
      <do_if value="$params">
        <do_if value="$params.$destination?">
          <set_value name="$destination" exact="$params.$destination"/>
        </do_if>
      </do_if>
      
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Script started with Params: $destination: %3'.[this.name,this.container.name,$destination]"/>
      
      <!-- Verify Input and Situation -->
<!-- => no Movement out of Zone
      => 
      -->
      <do_if value="not $destination.exists">
        <debug_text filter="error" text="'%1 %2 Destination not given or non-existent - Abort'.[this.name,this.container.name]"/>
        <return value="false"/>
      </do_if>
      <do_if value="$destination.zone != this.zone and this.ship.distanceto.{$destination} gt 50km">
        <debug_text filter="error" text="'%1 %2 Destination Zone ( %3 ) not current Zone ( %4 ) or at least nearby - Abort'.[this.name,this.container.name,$destination.zone.knownname,this.zone.knownname]"/>
        <return value="false"/>
      </do_if>
      
      <!-- Check if Destination can be docked at.. -->
      
      <set_command_action commandaction="commandaction.docking" param="$destination"/>
      <do_if value="this.$ut_cac?"><set_value name="this.$ut_cac.$isactive"/></do_if>
      
      
      <!-- leave formation (if there is any) as that would block our movement (from move.dockat)-->
      <leave_formation object="this.ship" />
      
      <do_if value="not (this.ship.isclass.ship_xl or this.ship.isclass.ship_l)" comment="use this part if the Ship can Dock internally - preffered over external Parking">
        <resume label="docking"/>
      </do_if>
      <do_else>
        <resume label="parking"/>
      </do_else>
      
      
      <!-- ############################################################################ -->
      <!-- ############################################################################ -->
      <!-- Movement Steps for Docking-->
      <label name="docking"/>
      
      <!-- for now simply passing on to Vanilla -->
      <run_script name="'move.dockat'" result="$dockresult">
        <param name="destination" value="$destination"/>
      </run_script>
      
      
      <resume label="finish"/>
      
      <!-- Movement Steps for parking -->
      <label name="parking"/>
      
      <do_if value="$destination.component?">
        <!-- if a Parking Spot was passed directly - check it if its free and use it. otherwise use any at the Station its attached to.. -->
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Passed Dock directly: %3'.[this.name,this.container.name,$destination]"/>
        <set_value name="$parkslot" exact="$destination"/>
        <set_value name="$destination" exact="$destination.component.container"/>
        <connect_to_trade_location ship="this.ship" tradedock="if true then $parkslot else 'direct pass parkslot'" result="$success" />
        <do_if value="$success">
          <resume label="park"/>
        </do_if>
      </do_if>
      
      <!-- check for existing Slots -->
      <find_tradeoffer_parking_slot name="$slot_exists" object="$destination" includeoccupied="true" check="true" />
      <do_if value="not $slot_exists">
        <debug_text filter="error" text="'%1 %2 No Parking Spot - Abort'.[this.name,this.container.name]"/>
        <return value="false"/>
      </do_if>
      
      <label name="wait for parking slot"/>
      
      <!-- cleanup in case of a previous Abort -->
      <do_if value="this.ship.parkedat.exists">
        <disconnect_from_trade_location ship="this.ship" />
      </do_if>
      
      <!-- first try to get a free  a Parking Spot for the correct Offer and if found park there -->
      <find_tradeoffer_parking_slot name="$parkslot" object="$destination" trade="$tradeoffer" refobject="this.ship"  />
      <do_if value="$parkslot and $parkslot.component.isoperational">
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Got Park Slot: %3 on %4'.[this.name,this.container.name,$parkslot,$destination.knownname]"/>
        <connect_to_trade_location ship="this.ship" tradedock="if true then $parkslot else 'First Found Parkslot'" result="$success" />
        <do_if value="$success">
          <set_value name="$move_to_approach_pos_first"/>
          <resume label="park"/>
        </do_if>
      </do_if>
      <do_else>
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Park Slot not existent or operational, removing it and waiting for queue clearing: %3 %4'.[this.name,this.container.name,@$parkslot,@$parkslot.component]"/>
        <set_value name="$parkslot" exact="false"/>
      </do_else>
      
      <!-- if no Park Slot is free register in general Park Queue and wait till you are first to find a Park pos -->
      <!-- create Park Queue if necesary (turn it into a global Table? ) -->
      <do_if value="$docking_coordinator">
        <do_if value="not $docking_coordinator.$park_queue?">
          <set_value name="$docking_coordinator.$park_queue" exact="table[{$destination}=[]]"/>
        </do_if>
        <do_elseif value="not $docking_coordinator.$park_queue.{$destination}?">
          <set_value name="$docking_coordinator.$park_queue.{$destination}" exact="[]"/>
        </do_elseif>
        <set_value name="$park_queue" exact="$docking_coordinator.$park_queue"/>
        
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Sorting into park queue for: %3'.[this.name,this.container.name,$destination,$park_queue]"/>
        
        <do_if value="not $park_queue.{$destination}.indexof.{this.ship}">
          <append_to_list name="$park_queue.{$destination}" exact="this.ship"/>
        </do_if>
        <do_while value="not $parkslot">
          
          <!-- if first in queue: find Dock Slot where no Ship is waiting for and register to dock there (also un-register from common queue) -->
          <do_if value="$park_queue.{$destination}.{1} == this.ship">
            <find_tradeoffer_parking_slot name="$slots" object="$destination" includeoccupied="true" refobject="this.ship" multiple="true" />
            <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Possible Parkslots: %3'.[this.name,this.container.name,$slots]"/>
            <do_all exact="$slots.count" counter="$i">
              <do_if value="$slots.{$i}.component.isoperational and ( ( not $park_queue.{$slots.{$i}.component}? ) or ( not $park_queue.{$slots.{$i}.component}.exists ) or ( not ( $park_queue.{$slots.{$i}.component}.sector == this.sector ) ) )">
                <set_value name="$park_queue.{$slots.{$i}.component}" exact="this.ship"/>
                <set_value name="$parkslot" exact="$slots.{$i}"/>
                <remove_value name="$park_queue.{$destination}.{$park_queue.{$destination}.indexof.{this.ship}}"/>
                <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Sorted into Parkslot: %3'.[this.name,this.container.name,$parkslot]"/>
                <break/>
              </do_if>
            </do_all>
          </do_if>
          <do_if value="$parkslot">
            <break/>
          </do_if>
          <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 No Parkslot to wait for - using Station Queue: %3'.[this.name,this.container.name,$park_queue]"/>
          <wait max="5min">
            <interrupt>
              <conditions>
                <event_object_signalled object="$destination" param="'parking queue update'"/>
                <check_value  value="$park_queue.{$destination}.{1} == this.ship"/>
              </conditions>
            </interrupt>
          </wait>
          <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Park queue next'.[this.name,this.container.name]"/>
        </do_while>
        
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Got Parking Slot: %3 - Moving to secondary Approach Pos. Park Queue: %4'.[this.name,this.container.name,$parkslot,$park_queue]"/>
        
        <!-- move to an approach pos near the Dock to minimize final Parking Time - basically its a more far out approach pos..  -->
        <get_trade_parking_pos ship="this.ship" tradedock="if true then $parkslot else 'Parking Pos 1'" space="$destination.zone" approach="true" position="$approachpos" rotation="$approachrot"/>
        <get_trade_parking_pos ship="this.ship" tradedock="if true then $parkslot else 'Parking Pos 2'" space="$destination.zone" approach="false" position="$parkpos" rotation="$parkrot"/>
        <!-- Calculate a more distant Approach Pos to allow the currently docked Ship to undock properly -->
        <!-- basically Approach pos + 2* vector park pos to approach pos -->
        <set_value name="$approachpos" exact="position.[$approachpos.x + ( $approachpos.x - $parkpos.x ) * 2 , $approachpos.y + ( $approachpos.y - $parkpos.y ) * 2 , $approachpos.z + ( $approachpos.z - $parkpos.z ) * 2 ]"/>
        <!-- Signal Followers where we attempt to Park so they can wait nearby -->
        <signal_objects object="this.ship" param="'travel dockat'" param2="[$destination,$parkslot,$approachpos]" param3="null" comment="not waiting - no prep group needed"/>
        
        <set_avoid_collisions object="this.ship" enabled="false"/>
        <move_to object="this.ship" usehighways="false" destination="$destination.zone" finishonapproach="false" abortpath="this.$mayabortpath?">
          <!-- NOTE: finishonapproach currently causes problems with position jumping for the next move_to unless there is a <wait /> -->
          <position value="$approachpos" />
          <rotation value="$approachrot" /> 
        </move_to>
        <remove_value name="this.$mayabortpath"/>
        
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Arrived at Parking Wait Pos'.[this.name,this.container.name]"/>
        
       <!-- check regulary if our parking Spot still works -->
        <do_if value="not $parkslot.component.isoperational">
          <remove_value name="$park_queue.{$parkslot.component}"/>
          <remove_value name="$parkslot"/>
          <resume label="wait for parking slot" />
        </do_if>
        
        <!-- wait for Unpark Signal from Ship parked and, if common queue is empty, also wait for other Slots just freed up completely -->
        <connect_to_trade_location ship="this.ship" tradedock="if true then $parkslot else 'Unark Signal 1'" result="$success" />
        <do_while value="not $success">
          <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Waiting for Parking Slot to be freed'.[this.name,this.container.name]"/>
          <wait max="1min">
            <interrupt>
              <conditions>
                <check_any>
                  <event_object_signalled object="$parkslot.component" param="'parking queue update'"/>
                  <check_all>
                    <event_object_signalled object="$destination" param="'parking queue update'"/>
                    <check_value value="$park_queue.{$destination}.count == 0"/>
                  </check_all>
                </check_any>
              </conditions>
              <actions>
                <do_if value="event.object == $destination">
                  <connect_to_trade_location ship="this.ship" tradedock="event.param2" result="$success" />
                  <do_if value="$success">
                    <set_value name="$parkslot" exact="event.param2"/>
                    <set_value name="$move_to_approach_pos_first"/>
                    <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Changed Parkslot: %3 queue: %4'.[this.name,this.container.name,$parkslot,$park_queue]"/>
                  </do_if>
                </do_if>
              </actions>
            </interrupt>
          </wait>
          <!-- check regulary if our parking Spot still works -->
          <do_if value="not $parkslot.component.isoperational">
            <resume label="wait for parking slot" />
          </do_if>
          <do_if value="not $success">
            <connect_to_trade_location ship="this.ship" tradedock="if true then $parkslot else 'unpark Signal 2'" result="$success" />
          </do_if>
        </do_while>
      </do_if>
      <do_else>
        <!-- no coordinating Entity - basically do polling until successful (use events instead of time to poll though) -->
        <set_value name="$success" exact="false"/>
        <set_value name="$move_to_approach_pos_first"/>
        <do_while value="not $success">
          <wait max="5min">
            <interrupt>
              <conditions>
                <event_object_signalled object="$destination" param="'parking queue update'"/>
              </conditions>
              <actions>
                <connect_to_trade_location ship="this.ship" tradedock="event.param2" result="$success" />
                <do_if value="$success">
                  <set_value name="$parkslot" exact="event.param2"/>
                </do_if>
              </actions>
            </interrupt>
          </wait>
          <!-- fallback in case signalling didnt work -->
          <do_if value="not $success">
            <find_tradeoffer_parking_slot name="$parkslot" object="$destination" trade="$tradeoffer" refobject="this.ship" />
            <connect_to_trade_location ship="this.ship" tradedock="if true then $parkslot else 'Unpark Signal 3'" result="$success" />
          </do_if>
        </do_while>
      </do_else>
      
      <label name="park"/>
      
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Beginning Parking'.[this.name,this.container.name]"/>
      
      <set_avoid_collisions object="this.ship" enabled="false"/>
      
      <!-- check regulary if our parking Spot still works -->
      <do_if value="not $parkslot.component.isoperational">
        <resume label="wait for parking slot" />
      </do_if>
      
      <do_if value="$move_to_approach_pos_first?">
        <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Flying to Approach Pos'.[this.name,this.container.name]"/>
        <get_trade_parking_pos ship="this.ship" tradedock="if true then $parkslot else 'Parking Pos 3'" space="$destination.zone" approach="true" position="$approachpos" rotation="$approachrot"/>
        <!-- Signal Followers where we attempt to Park so they can wait nearby - also in Update Case when Parkpos changed-->
        <signal_objects object="this.ship" param="'travel dockat'" param2="[$destination,$parkslot,$approachpos]" param3="null" comment="not waiting - no prep group needed"/>
        <move_to object="this.ship" usehighways="false" destination="$destination.zone" finishonapproach="false" abortpath="this.$mayabortpath?">
          <!-- NOTE: finishonapproach currently causes problems with position jumping for the next move_to unless there is a <wait /> -->
          <position value="$approachpos" />
          <rotation value="$approachrot" />
        </move_to>
      </do_if>
      <remove_value name="this.$mayabortpath"/>
      
      <!-- check regulary if our parking Spot still works -->
      <do_if value="not $parkslot.component.isoperational">
        <resume label="wait for parking slot" />
      </do_if>
      
      <!-- final Movement -->
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Parking'.[this.name,this.container.name]"/>
      <get_trade_parking_pos ship="this.ship" tradedock="if true then $parkslot else 'parking Pos 4'" space="$destination.zone" approach="false" position="$parkpos" rotation="$parkrot" quadrant="$quadrant"/>
      <do_if value="($quadrant == quadrant.left) or ($quadrant == quadrant.right)">
        <move_strafe object="this.ship" destination="$destination.zone" forcerotation="true" abortpath="false">
          <position value="$parkpos" />
          <rotation value="$parkrot" />
        </move_strafe>
      </do_if>
      <do_elseif value="$quadrant == quadrant.back">
        <move_to object="this.ship" usehighways="false" destination="$destination.zone" forcerotation="true" reverse="true" abortpath="false">
          <position value="$parkpos" />
          <rotation value="$parkrot" />
        </move_to>
      </do_elseif>
      <do_else>
        <move_to object="this.ship" usehighways="false" destination="$destination.zone" forcerotation="true" abortpath="false">
          <position value="$parkpos" />
          <rotation value="$parkrot" />
        </move_to>
      </do_else>
      
      <!-- check regulary if our parking Spot still works -->
      <do_if value="not $parkslot.component.isoperational">
        <resume label="wait for parking slot" />
      </do_if>
      
      <!-- Just to be safe - Force final Position -->
      <warp object="this.ship" zone="$destination.zone">
        <position value="$parkpos"/>
        <rotation value="$parkrot"/>
      </warp>
      
      
      
      <!-- Clear Queue since we are not part of it anymore -->
      <do_if value="$park_queue?">
        <do_if value="$park_queue.{$destination}.indexof.{this.ship}">
          <remove_value name="$park_queue.{$destination}.{$park_queue.{$destination}.indexof.{this.ship}}"/>
        </do_if>
        <do_if value="$parkslot.component.exists">
          <do_if value="$park_queue.{$parkslot.component} == this.ship">
            <remove_value name="$park_queue.{$parkslot.component}"/>
          </do_if>
        </do_if>
      </do_if>
      <!-- Signal next Ship in Queue to move to Advance -->
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Sending Parking Queue Update'.[this.name,this.container.name]"/>
      <signal_objects object="$parkslot.component" param="'parking queue update'" param2="$parkslot"/>
      <signal_objects object="$destination" param="'parking queue update'" param2="$parkslot" delay="1s"/>
      
      
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Parking done'.[this.name,this.container.name]"/>
      
      <resume label="finish"/>
      
      <!-- Cleanup -->
      <label name="finish"/>
      
      <return value="true"/>
    </actions>
  </attention>
  <on_abort>
    <!-- free our Position in queue -->
    <do_if value="$park_queue?">
      <do_if value="$park_queue.{$destination}.indexof.{this.ship}">
        <remove_value name="$park_queue.{$destination}.{$park_queue.{$destination}.indexof.{this.ship}}"/>
      </do_if>
      <do_if value="$parkslot.component.exists">
        <do_if value="$park_queue.{$parkslot.component} == this.ship">
          <remove_value name="$park_queue.{$parkslot.component}"/>
        </do_if>
      </do_if>
    </do_if>
    <disconnect_from_trade_location ship="this.ship" />
    <!-- Signal next Ship in Queue to move to Advance -->
      <debug_text filter="general" chance="@this.$debug * 100" text="'%1 %2 Sending Parking Queue Update (Abort Case)'.[this.name,this.container.name]"/>
    <signal_objects object="$parkslot.component" param="'parking queue update'" param2="$parkslot"/>
    <signal_objects object="$destination" param="'parking queue update'" param2="$parkslot" delay="1s"/>
    <set_avoid_collisions object="this.ship" enabled="true" />
    <!-- ToDo: make parent Order Interruptable again -->
  </on_abort>
</aiscript>
