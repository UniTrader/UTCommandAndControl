<?xml version="1.0" encoding="UTF-8"?>
<aiscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="ut.cac.orders.captain.buildership" xsi:noNamespaceSchemaLocation="http://utnas/~unitrader/XRebirthxsds/aiscripts.xsd">
  <params>
    <param name="params" comment="Persistent Params Table to keep track of what should be done and when"/>
  </params>
  <attention min="unknown">
    <actions>
      <do_if value="not $params.$position?">
        <set_value name="$params.$position" exact="this.ship.position"/>
      </do_if>
      <!-- ToDo: Create "Hold build Position"-Script and issue it whenever necessary and possible -->
      <signal_objects object="this" param="'new order'" param2="[ table[$script='ut.cac.move.generic',$displayname='Realign Buildership',$destination=this.zone,$position=$params.$position,$lookat=this.ship.buildanchor.position,$interruptable=true] , table[$script='ut.cac.microorder',$displayname=if ( this.ship.architect.$orderlist.{1}.$script== 'ut.cac.com.architect.build' ) then this.ship.architect.$orderlist.{1}.$displayname else 'wait...',$order='wait order',$time=1h,$interruptable=true] ]"/>
    </actions>
  </attention>
</aiscript>
